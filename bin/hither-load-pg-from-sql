#!/usr/bin/env bash

set -e

source "$(cd -P `dirname $BASH_SOURCE` && pwd -P)/hither"

[ -n "$HITHER_OUT_DBNAME" ] ||
  die "Command requires a database name"

if `pg-db-exists "$HITHER_OUT_DBNAME"`; then
  psql -c "drop database $HITHER_OUT_DBNAME" &>/dev/null || true
fi

read-input |
  perl -pe 's/(booktown )postgres/$1/' |
  psql

# vim: set lisp ft=sh:
