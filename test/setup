#!/usr/bin/env bash

set -e

export BASHLIB="`
  find $PWD -type d |
  grep -E '/(bin|lib)$' |
  xargs -n1 printf "%s:"
`"
export PATH="$BASHLIB:$PATH"
source bash+ :std
source lib/hither.bash

reset-env() {
  for e in `env`; do
    if [[ "$e" =~ ^HITHER_ ]]; then
      unset "${e%=*}"
    fi
  done
}
